<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_word_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shwetak3e.readfile.OccurenceActivity"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/header"
    android:layout_marginBottom="2dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="THE FREQUENCY OF EACH WORD"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        />
</LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/header">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="THIS IS AN EMPTY FILE"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/emptyFile"
        />


    <ExpandableListView
        android:id="@+id/wordList"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:divider="@android:color/black"
        android:dividerHeight="0.5dp"
        android:layout_margin="1dp"
        android:padding="2dp"
        android:background="@drawable/bg_rounded_square_holder"

        />
</FrameLayout>


</RelativeLayout>
